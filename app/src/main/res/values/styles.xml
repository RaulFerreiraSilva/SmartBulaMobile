<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImgCapsula">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@drawable/ic_mini_logo</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">4.5dp</item>
    </style>

    <style name="ImgBefore">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:src">@drawable/ic_before</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CardUser">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:background">@drawable/card_user</item>
    </style>

    <style name="ImgClose">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="LayoutBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="LayoutWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/branco</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_margin">40dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="ButtonPesquisar">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/button_pesquisar</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CardCamera">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:background">@drawable/card_camera</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="CardAlergia">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:background">@drawable/card_alergia</item>
    </style>

    <style name="CardBemVindo">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:background">@drawable/card_bem_vindo</item>
    </style>

    <style name="CardNote">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">275dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/card_note</item>
    </style>

</resources>